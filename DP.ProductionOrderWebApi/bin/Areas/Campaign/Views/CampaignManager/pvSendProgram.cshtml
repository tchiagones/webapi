				},
				{
				    title: 'Click for Google',
				    url: 'http://google.com/',
				    start: '2014-06-28'
				}
			]
        });

        $(document).on("click", ".rdoAllMonth", function () {
            switch ($(this).attr("data_choose")) {
                case 'Sempre':
                    $("#feedBackAllMonth").html("Sempre");
                    break;
                case 'Apos':
                    $("#feedBackAllMonth").html("");
                    break;
                case 'Sempre':
                    $("#feedBackAllMonth").html("");
                    break;
            }
        });

        $(document).on("click", ".rdoAllDay", function () {
            switch ($(this).attr("data_choose")) {
                case 'Sempre':
                    $("#feedBackAllDay").html("Sempre");
                    break;
                case 'Apos':
                    $("#feedBackAllDay").html("");
                    break;
                case 'Sempre':
                    $("#feedBackAllDay").html("");
                    break;
            }
        });

        $("#dateFinishAllMonth").datepicker({
            onSelect: function (date) {
                var dateIni = $("#dateAllMonth").datepicker('getDate');
                var dateFim = $(this).datepicker('getDate');
                var dateTextIni = $.datepicker.formatDate("dd/mm/yy", dateIni);
                var dateTextFim = $.datepicker.formatDate("dd/mm/yy", dateFim);

                $("#feedBackAllMonth").html("Em início: " + dateTextIni + " fim: " + dateTextFim);
